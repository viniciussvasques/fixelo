{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "module": "CommonJS",
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "prisma/**/*"],
  "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
} 