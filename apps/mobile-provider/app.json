{
  "expo": {
    "name": "Fixelo Pro",
    "slug": "fixelo-provider",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fixelo.provider"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.fixelo.provider",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_CALENDAR",
        "WRITE_CALENDAR"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Fixelo Pro to use your location to show your service area.",
          "locationAlwaysPermission": "Allow Fixelo Pro to use your location to show your service area.",
          "locationWhenInUsePermission": "Allow Fixelo Pro to use your location to show your service area."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Fixelo Pro to access your photos to upload service portfolios.",
          "cameraPermission": "Allow Fixelo Pro to access your camera to take service photos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/notification-icon.png",
          "color": "#ffffff"
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow Fixelo Pro to access your calendar to manage bookings."
        }
      ]
    ],
    "scheme": "fixelo-pro",
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
} 