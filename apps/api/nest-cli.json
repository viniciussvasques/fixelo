{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "exec": "node dist/apps/api/src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["**/*.json", "**/*.hbs", "**/*.html"],
    "plugins": ["@nestjs/swagger"],
    "tsConfigPath": "tsconfig.build.json"
  }
} 